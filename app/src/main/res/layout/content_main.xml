    <!-- Status -->
    <LinearLayout
        style="@style/Block"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToMain"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/main_status"
            android:src="@android:drawable/ic_menu_help"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/ItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_status"
                />

            <TextView
                style="@style/ItemValue"
                android:id="@+id/status_str"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>
    </LinearLayout>

    <!-- Last sync -->
    <LinearLayout
        style="@style/Block"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToMain"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/main_sync"
            android:src="@android:drawable/ic_menu_info_details"/>
        <LinearLayout
        style="@style/Block"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <TextView
                style="@style/ItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_sync"
                />

            <TextView
                style="@style/ItemValue"
                android:id="@+id/sync_str"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>
    </LinearLayout>

    <!--
